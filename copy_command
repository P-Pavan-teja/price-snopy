SELECT 
    MAX(CASE WHEN CONFIG_NAME = 'STAGE'       THEN CONFIG_VALUE END) AS STAGE,
    MAX(CASE WHEN CONFIG_NAME = 'PATH'        THEN CONFIG_VALUE END) AS PATH,
    MAX(CASE WHEN CONFIG_NAME = 'TABLE'       THEN CONFIG_VALUE END) AS TARGET_TABLE,
    MAX(CASE WHEN CONFIG_NAME = 'FILE_FORMAT' THEN CONFIG_VALUE END) AS FILE_FORMAT,
    MAX(CASE WHEN CONFIG_NAME = 'PATTERN'     THEN CONFIG_VALUE END) AS PATTERN,
    MAX(CASE WHEN CONFIG_NAME = 'ON_ERROR'    THEN CONFIG_VALUE END) AS ON_ERROR,
    MAX(CASE WHEN CONFIG_NAME = 'PURGE'       THEN CONFIG_VALUE END) AS PURGE,
    MAX(CASE WHEN CONFIG_NAME = 'FORCE'       THEN CONFIG_VALUE END) AS FORCE
FROM CMA_STG.HOGAN.SP_S3_STG_TBL_CONFIG
WHERE PROJECT_NAME = 'HOGAN'
  AND FILE_NAME    = 'DDA_DEPOSIT_TN_DETAIL'
  AND CONFIG_TYPE  = 'COPY'
  AND ENABLED      = TRUE;